<%= form_for(@article, html: {multipart: true}) do |f| %>
	<ul>
		<% @article.errors.full_messages.each do |err| %>
			<li><%= err %></li>
		<% end %>
	</ul>
	<p>
		<%= f.label :title %><br> <%# creates an HTML label for a form field %>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>
	<p>
	  <%= f.label :tag_list %><br />
	  <%= f.text_field :tag_list %>
	</p>
	<p>
		<% if @article.image.exists? %>
			<%= image_tag @article.image.url %><br>
		<% end %>
		<%= f.label :image, "Attach an image" %><br>
		<%= f.file_field :image %>
	</p>
	<p>
		<%= f.submit %> <%# creates a button labeled "Create" %>
	</p>
<% end %>

<%# f.name is a helper %>